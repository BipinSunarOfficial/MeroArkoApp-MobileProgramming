<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/toolbar_bg_color"
        app:title="@string/text_login"
        app:titleTextColor="@color/white"

        />

    <ImageView
        android:layout_marginTop="-40dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/fb_logo"

        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/edit_background"
        android:hint="UserName/Email Address"
        android:inputType="text"
        android:padding="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/edit_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:textColor="@color/forgot_password"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="10sp"
        android:textStyle="italic"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/btn_bg"
            android:padding="10sp"
            android:text="@string/text_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp"

            />

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/Register"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:background="@drawable/signup_btn_bg"-->
<!--            android:padding="10sp"-->
<!--            android:text="@string/text_signup"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="25sp"-->

<!--            />-->




    </LinearLayout>


    <TextView
        android:id="@+id/register_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as new User"
        android:layout_marginTop="20sp"
        android:textAlignment="center"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="10sp"
        android:textStyle="italic"
        android:textColor="@color/forgot_password"
        android:textSize="20sp"
        />





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/fb_connecting_world"
        android:scaleType="centerCrop"
        />




</LinearLayout>